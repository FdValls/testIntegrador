{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
        {
          "name": "next"
        }
      ],
      "paths": {
        "@/*": [
          "./src/*"
        ]
      }
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      ".next/types/**/*.ts",
      "src/app/**/*.ts",
      "src/config/types"
    ],
    "exclude": [
      "node_modules"
    ]
}
